%h1.title Editing #{@form.name}

= form_for @form, url: { action: :preview }, method: :post do |f| 
  %table#edit_form
    %tr
      %td{colspan: 6}
        = f.label :name, 'Change form title:'
        = f.text_field :name, required: true, size: 50
    %tr
      %th Field text
      %th Response type
      %th Required?
      %th
      %th
      %th
    = f.fields_for :fields, @form.fields do |g|
      %tr
        %td= g.text_area :prompt, required: true, size: '35x4'
        %td= g.select :data_type, Field::DATA_TYPES
        %td= g.check_box :required
        %td= button_to 'Move up', nil, disabled: true
        %td= button_to 'Move down', nil, disabled: true
        %td= button_to 'Remove field', nil, disabled: true
    %tr
      %td{colspan: 6}
        .actions= button_to 'Add field', nil, disabled: true
  .actions= f.submit 'Preview changes'
